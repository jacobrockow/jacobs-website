.row
  .col-md-12
    %h2.mb-4= @user.name

    %table.table.table-bordered
      %tbody
        %tr
          %th Name
          %td= @user.name
        %tr
          %th Email
          %td= @user.email
        %tr
          %th Created At
          %td= @user.created_at.strftime("%B %d, %Y %I:%M %p")
        %tr
          %th Updated At
          %td= @user.updated_at.strftime("%B %d, %Y %I:%M %p")

    .mt-4
      = link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning'
      = link_to 'Back', users_path, class: 'btn btn-secondary'
    -#   = link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
